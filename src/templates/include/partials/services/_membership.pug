section.popup-section
    .membership-popup.popup.clearfix(data-popup='membership')
        .popup-table
            .popup-table-cell
                .popup-inner
                    .membership-logo-holder.txt-center
                        img(src= imgPath + 'ui/logo-small-transparent.png')
                    .membership-holder.txt-center
                        .membership-title MEMBERSHIP APPLICATION
                        .membership-perk Earn up to 10% rebates and enjoy additional perks at our partner merchants!
                        form.membership-form#js-membership-form(novalidate = 'novalidate')
                            .form-group.show-error-wrapper
                                input(type='text' class='form-control' name='name' id='name' placeholder='Your Name')
                            .form-group.show-error-wrapper
                                input(type='text' class='form-control' name='nric-passport' id='nric-pasport' placeholder='NRIC / Passport No.')
                            .form-group.show-error-wrapper
                                input(type='text' class='form-control' name='phone' id='phone' placeholder='Contact Number')
                            .form-group.show-error-wrapper
                                input(type='text' class='form-control' name='email' id='email' placeholder='Email')
                            .form-group.show-error-wrapper.txt-center
                                input(type='checkbox' name='tnc' value='tnc') 
                                span.text-checkbox
                                    | I have read and agree to the
                                    | #[a(href='#/') Terms & Conditions]
                                    | of this service.
                            .form-group.txt-center
                                button.button.submit(type='submit' value='submit')
                                    | Submit
                    a.popup-close.icon-close(data-popup-close='membership' href='#/')
